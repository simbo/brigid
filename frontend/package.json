{
  "name": "brigid-frontend",
  "description": "",
  "version": "0.1.0",
  "repository": "https://github.com/simbo/brigid",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^16"
  },
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "browserslist": "./bin/list-supported-browsers.sh",
    "__build": "ng build --plugin ~webpack.plugin.js",
    "build": "yarn build:prod",
    "build:dev": "yarn __build --configuration development",
    "build:prod": "yarn __build --configuration production",
    "bundle-analyzer": "yarn clean && yarn build:prod --stats-json && webpack-bundle-analyzer ./dist/brigid-frontend/stats.json",
    "check": "yarn format-and-lint && yarn test:once && yarn build:prod",
    "clean": "rm -rf ./dist/brigid-frontend",
    "coverage:open": "open -a Google\\ Chrome ./coverage/lcov-report/index.html",
    "deps:refresh": "rm -rf node_modules yarn.lock && yarn cache clean && yarn install",
    "deps:upgrade": "../bin/upgrade-dependencies.sh frontend",
    "fix:ngcc": "rm -rf node_modules/@angular/compiler-cli/ngcc/ngcc_lock_file node_modules/@angular/compiler-cli/ngcc/__ngcc_lock_file__",
    "format": "prettier --check \"./**/*.{ts,scss,js,md,json,yml,html}\"",
    "format:fix": "prettier --write \"./**/*.{ts,scss,js,md,json,yml,html}\"",
    "format-and-lint": "yarn format && yarn lint",
    "format-and-lint:fix": "yarn lint:scripts:fix && yarn lint:styles && yarn lint:templates && yarn format:fix",
    "lint": "yarn lint:scripts && yarn lint:styles && yarn lint:templates",
    "lint:scripts": "ng lint",
    "lint:scripts:fix": "ng lint --fix",
    "lint:styles": "stylelint \"./src/**/*.{css,scss,sass}\"",
    "lint:templates": "htmlhint --config htmlhint.json src/app",
    "ng": "ng",
    "node:upgrade": "../bin/upgrade-node.sh frontend",
    "__serve": "ng serve --plugin ~webpack.plugin.js --host 0.0.0.0",
    "serve": "yarn serve:dev",
    "serve:dev": "yarn __serve --configuration development --disable-host-check",
    "serve:prod": "yarn __serve --configuration production --disable-host-check",
    "start": "yarn install --immutable && yarn serve --open",
    "__test": "ng test --plugin ~webpack.plugin.js --code-coverage",
    "test": "yarn __test --reporters spec,kjhtml,coverage",
    "test:headless": "yarn test --browsers=ChromeHeadless",
    "test:once": "yarn __test --no-watch --browsers=ChromeHeadless --reporters dots,coverage",
    "test:verbose": "yarn __test --reporters verbose,coverage",
    "__watch": "ng build --plugin ~webpack.plugin.js --host 0.0.0.0 --watch",
    "watch": "yarn watch:dev",
    "watch:dev": "yarn __watch --configuration development --disable-host-check",
    "watch:prod": "yarn __watch --configuration production --disable-host-check"
  },
  "dependencies": {
    "@angular/animations": "^14.0.3",
    "@angular/cdk": "14.0.3",
    "@angular/common": "^14.0.3",
    "@angular/compiler": "^14.0.3",
    "@angular/core": "^14.0.3",
    "@angular/forms": "^14.0.3",
    "@angular/material": "14.0.3",
    "@angular/platform-browser": "^14.0.3",
    "@angular/platform-browser-dynamic": "^14.0.3",
    "@angular/router": "^14.0.3",
    "@ngrx/effects": "14.0.1",
    "@ngrx/store": "14.0.1",
    "@ngrx/store-devtools": "14.0.1",
    "rxjs": "~7.5.5",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.6"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.3",
    "@angular-eslint/builder": "^14.0.0",
    "@angular-eslint/eslint-plugin": "^14.0.0",
    "@angular-eslint/eslint-plugin-template": "^14.0.0",
    "@angular-eslint/schematics": "^14.0.0",
    "@angular-eslint/template-parser": "^14.0.0",
    "@angular/cli": "~14.0.3",
    "@angular/compiler-cli": "^14.0.3",
    "@ngrx/eslint-plugin": "^14.0.1",
    "@types/eslint": "^8",
    "@types/htmlhint": "^1",
    "@types/jasmine": "~4.0.3",
    "@types/karma-spec-reporter": "^0",
    "@types/lodash-es": "^4",
    "@types/node": "^16",
    "@types/prettier": "^2",
    "@types/webpack-bundle-analyzer": "^4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "autoprefixer": "^10.4.7",
    "chalk": "4.1.2",
    "css-mqpacker-sort-mediaqueries": "^0.2.2",
    "eslint": "^8.18.0",
    "eslint-plugin-editorconfig": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^42.0.0",
    "htmlhint": "^1.1.4",
    "jasmine-core": "^4.2.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "karma-spec-reporter": "^0.0.34",
    "karma-verbose-reporter": "^0.0.8",
    "lodash-es": "^4.17.21",
    "merge": "^2.1.1",
    "mqpacker": "^7.0.0",
    "ng-mocks": "^14.0.1",
    "ngx-build-plus": "^14.0.0",
    "npm-check-updates": "^14.1.1",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "~4.7.2",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
